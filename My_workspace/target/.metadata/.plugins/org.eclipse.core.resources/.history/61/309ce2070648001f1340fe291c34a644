int main(void)
{
    volatile uint32_t *pClkCtrlReg = (uint32_t*)0x40023830;
    volatile uint32_t *pPortBModeReg = (uint32_t*)0x40020680;
    volatile uint32_t *pPortBOutReg = (uint32_t*)0x40020C14;

    uint32_t temp = *pClkCtrlReg;

    // Enable GPIOB clock
    temp = *pClkCtrlReg;
    temp |= 0x00000002; // Use the correct bit to enable GPIOB clock
    *pClkCtrlReg = temp;

    // Configure PB7 as output
    temp = *pPortBModeReg;
    temp &= 0xFFFF3FFF; // Clear bits 14 and 15
    temp |= 0x00004000; // Set bit 14 to make PB7 an output
    *pPortBModeReg = temp;

